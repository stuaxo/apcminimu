                ActionButton:
                    text: 'Off'
                ActionButton:
                    text: 'Green'
                    background: [0, .5, 0]
                ActionButton:
                    text: 'Red'
                    color: [.5, 0, 0]
                ActionButton:
                    text: 'Yellow'
                    color: [.5, .5, 0]
