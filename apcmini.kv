FloatLayout:
    ActionBar:
        size_hint: 1,0.1
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Blinkenlights'
            ActionOverflow:
            ActionButton:
                text: app.input_port
            ActionButton:
                text: app.output_port
            ActionButton:
                text: 'Gate'
            ActionButton:
                text: 'Toggle'
            ActionButton:
                text: 'Clear'
                id: 'clear_all'
            ActionGroup:
                text: 'Group1'
